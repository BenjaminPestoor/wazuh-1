<group name="ossec,">

  <rule id="19000" level="0">
    <category>ossec</category>
    <decoded_as>policy_monitoring</decoded_as>
    <options>no_full_log</options>
    <description>Group of policy monitoring rules.</description>
  </rule>

  <rule id="19001" level="3">
    <if_sid>19000</if_sid>
    <field name="pm.type">^summary</field>
    <options>no_full_log</options>
    <description>Policy monitoring summary: Passed checks: $(pm.passed) Failed checks: $(pm.failed) Score: $(pm.score)</description>
  </rule>

  <rule id="19002" level="3">
    <if_sid>19000</if_sid>
    <field name="pm.type">^check</field>
    <options>no_full_log</options>
    <description>Policy monitoring check event: Passed checks: $(pm.passed) Failed checks: $(pm.failed) Score: $(pm.score)</description>
  </rule>

  <rule id="19003" level="7">
    <if_sid>19002</if_sid>
    <field name="pm.check.result">^failed</field>
    <options>no_full_log</options>
    <description>Check with id $(pm.check.id) for policy $(pm.policy) failed</description>
  </rule>

  <rule id="19004" level="3">
    <if_sid>19002</if_sid>
    <field name="pm.check.result">^passed</field>
    <options>no_full_log</options>
    <description>Check with id $(pm.check.id) for policy $(pm.policy) passed</description>
  </rule>

  <rule id="19005" level="3">
    <if_sid>19004</if_sid>
    <field name="pm.check.previous_result">^failed</field>
    <options>no_full_log</options>
    <description>Check with id $(pm.check.id) for policy $(pm.policy) has changed to passed</description>
  </rule>

  <rule id="19006" level="9">
    <if_sid>19003</if_sid>
    <field name="pm.check.previous_result">^passed</field>
    <options>no_full_log</options>
    <description>Check with id $(pm.check.id) for policy $(pm.policy) has changed to failed</description>
  </rule>
</group>